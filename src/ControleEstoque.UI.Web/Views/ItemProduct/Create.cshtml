@model ControleEstoque.Application.ViewModels.ItemProductViewModel
@{
    ViewData["Title"] = "Register new Item Product";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />
        <div class="form-group">
            <label asp-for="IdItem" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdItem" asp-items="ViewBag.Item" class="form-control"></select>
                <span asp-validation-for="IdItem" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IdProduct" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IdProduct" asp-items="ViewBag.Product" class="form-control"></select>
                <span asp-validation-for="IdProduct" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ItemProductQuantity" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ItemProductQuantity" class="form-control" />
                <span asp-validation-for="ItemProductQuantity" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
