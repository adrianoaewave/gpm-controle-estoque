@model ControleEstoque.Application.ViewModels.OrderViewModel
@{
    ViewData["Title"] = "Register new Order";
}
<h2>@ViewData["Title"]</h2>
<form asp-action="Create">
    <div class="form-horizontal">
        <hr />
        @* Replacing classic Validation Summary to Custom ViewComponent as TagHelper *@
        <vc:summary />
        <div class="form-group">
            <label asp-for="OrderDate" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="OrderDate" class="form-control" />
                <span asp-validation-for="OrderDate" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryDays" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DeliveryDays" class="form-control" />
                <span asp-validation-for="DeliveryDays" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="DeliveryDescription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="DeliveryDescription" class="form-control" />
                <span asp-validation-for="DeliveryDescription" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Observation" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Observation" class="form-control" />
                <span asp-validation-for="Observation" class="text-danger"></span>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ERPCode" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="ERPCode" class="form-control" />
                <span asp-validation-for="ERPCode" class="text-danger"></span>
            </div>
        </div>


        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-info">Back to List</a>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
